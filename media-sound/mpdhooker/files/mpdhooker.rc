depend() {
	need net
	use mpd
}

export MPD_HOOKER_DIR=/etc/mpdhooker/

start () {
	ebegin "Starting Music Player Daemon Hooker"
	start-stop-daemon --start --exec /usr/bin/mpdhooker 
	eend $?
}

stop () {
	ebegin "Stopping Music Player Daemon Hooker"
	start-stop-daemon --stop --quiet --exec /usr/bin/mpdhooker -- --kill || eerror "mpdhooker is not running"
	eend $?
}
